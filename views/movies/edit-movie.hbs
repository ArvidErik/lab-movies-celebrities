<h2>Edit movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
    <input type="text" name="title" placeholder="title" value="{{movie.title}}">
    <input type="text" name="genre" placeholder="genre" value="{{movie.genre}}">
    <input type="text" name="plot" placeholder="plot" value="{{movie.plot}}">

    <label for="celebrities">Choose celebrities:</label>

    <select name="cast" id="cast" multiple>
    {{#each this.celebrities}}
    <option value="{{_id}}">{{name}}</option>
    {{/each}}
    </select>
    <button type="submit">Create</button>

</form>